<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingBottom="@dimen/item_padding_v"
    android:paddingEnd="@dimen/item_padding_h"
    android:paddingStart="@dimen/item_padding_h"
    android:paddingTop="@dimen/item_padding_v">

    <ImageView
        android:id="@+id/imgIconUser"
        android:layout_width="@dimen/icon_user_size"
        android:layout_height="@dimen/icon_user_size"
        android:src="@drawable/circle_icon"
        android:tint="@color/colorAccent" />

    <ImageView
        android:layout_width="@dimen/icon_user_size"
        android:layout_height="@dimen/icon_user_size"
        android:padding="@dimen/icon_image_padding"
        android:src="@drawable/ic_person_40"
        android:tint="@color/md_white_1000" />

    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/item_padding_h"
        android:layout_toEndOf="@id/imgIconUser"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/fish_user_names"
        android:textColor="@android:color/primary_text_light"
        android:textSize="16sp" />

</RelativeLayout>
